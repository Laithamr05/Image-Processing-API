{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "Server/**/*.ts",
    "Route + Validation/**/*.ts",
    "Utilities/**/*.ts",
    "Tests/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
